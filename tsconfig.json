{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "lib",
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "experimentalDecorators": false,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "lib": ["dom", "es6", "es2016", "es2017"],
        "removeComments": true,
        "sourceMap": true,
        "strict": true,
        "target": "es5"
    }
}